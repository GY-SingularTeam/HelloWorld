}
时间转换
#include<stdio.h>
int main()
{
	int n,a[4]={0},l=0;
	scanf("%d",&n);
	while(n)
	{
		a[l++]=n%60;
		n/=60;
	 }
	 if(l==0)
	 {
	 	printf("0:0:0");
	 }
	else if(l==1)
	 {
	 	printf("0:0:%d",a[l-1]);
	  } 
	 else if(l==2)
	  {
	  	printf("0:%d:%d",a[l-1],a[l-2]);
	  }
	 else if(l==3)
	  {
	  	printf("%d:%d:%d",a[l-1],a[l-2],a[l-3]);
	  }
	  return 0;
}
龟兔赛跑预测
#include<stdio.h>
int main()
{
	int v1,v2,t,s,l,t1=0,sum1=0,sum2=0,s1=1;
	scanf("%d%d%d%d%d",&v1,&v2,&t,&s,&l);
	while(1)
	{
		if(sum1-sum2<t)
		{
			t1++;
			s1=1;
			sum1+=s1*v1;
			sum2+=s1*v2;
		}
		else
		{
			t1+=s;
			sum2+=s*v2;
		}
		if(sum1>=l||sum2>=l)
		{
			if(sum1==l&&sum2==l)
			{
				printf("D\n");
			}
			else if(sum1>sum2)
			{
				printf("R\n");
			 } 
			 else if(sum1<sum2)
			 {
			 	printf("T\n");
			 	
			 }
			 printf("%d",t1);
			 break;
		}
	}
	return 0;
 } 
